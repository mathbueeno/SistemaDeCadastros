@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
 
    <h1 class="display-4">Editar Contato</h1>

</div>

<br/>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>

    }

    @if (TempData["MensagemErro"] != null)
    {

        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button> 
            @TempData["MensagemErro"]
        </div>

    }


    <br />


<form asp-controller="Contato" asp-action="Alterar" method="post">

        @*// Id oculto*@
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="NomeContato" class="form-control" placeholder="Digite o nome do contato">
            @Html.ValidationMessageFor(x => x.NomeContato)
      </div>

      <div class="form-group">
            <label for="nome">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail">
            @Html.ValidationMessageFor(x => x.Email)
      </div>

      <div class="form-group">
            <label for="nome">Celular</label>
            <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o número de celular">
            @Html.ValidationMessageFor(x => x.Telefone)
      </div>

      <br/>

  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>
