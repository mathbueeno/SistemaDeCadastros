@model List<ContatoModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="CriarContato">Adicionar Contato</a>
    </div>

    <br/>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>

    }

    @if (TempData["MensagemErro"] != null)
    {

        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button> 
            @TempData["MensagemErro"]
        </div>

    }


    <br />


    <h1 class="display-4">Lista de Contatos</h1>

    <table class="table" id="table-contatos">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Celular</th>
      <th scope="col"></th>
    </tr>
  </thead>
  
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (var contato in Model)
                {
                     <tr>
                         <th scope="row">@contato.Id</th>
                         <td>@contato.NomeContato</td>
                         <td>@contato.Email</td>
                         <td>@contato.Telefone</td>
                         <td>
                          <div class="btn-group" role="group">
                              <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarContato">Apagar</a>
                              <a role="button" class="btn btn-warning" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="EditarContato">Editar</a>
                          </div>
                         </td>
                     </tr>
                }
            }
        </tbody>
</table>
    



</div>    

    