@model UsuarioModel
@{
    ViewData["Title"] = "Apagar Usuário";
}



<div class="text-center">
    
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>

    <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>

